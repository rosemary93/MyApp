<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98A5EF"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <LinearLayout
        android:id="@+id/FontLinearLayout"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fontString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:text="@string/fontString"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#025981"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <RadioButton
            android:id="@+id/radioButtonDefaultFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#BD07B4"
            android:text="@string/default_string"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonSmallFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#BD07B4"
            android:text="@string/smallString"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonMediumFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#BD07B4"
            android:buttonTintMode="src_in"
            android:text="@string/medium"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonLargeFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#BD07B4"
            android:text="@string/largeString"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/BackgrndColorLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/backgroundColorString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/background_color"
            android:textColor="#025981"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <RadioGroup
            android:id="@+id/radioGroupBckColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonWhiteColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:text="@string/white_default"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButtonRedColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FA8F8F"
                android:text="@string/light_red"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButtonBlueColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#4FEAFF"
                android:text="@string/light_blue"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButtonGreenColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#00FD0A"
                android:text="@string/light_green"
                android:textSize="18sp" />
        </RadioGroup>
    </LinearLayout>

</FrameLayout>